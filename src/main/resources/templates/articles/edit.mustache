{{>layouts/header}}
<!--이 폼에서 보낸 데이터를 받기 위한 컨트롤러를 만들어야 한다-->
{{#article}}
<form class="container" action="/articles/update" method="post"> <!--form데이터는 무조건 post다-->
    <input name="id" type="hidden" value="{{id}}"> <!--article의 아이디값은 숨겨서 전송-->
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}">
    </div>

    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{content}}</textarea>  <!--dto의 필드명과 동일한 name 변수를 꼭 작성해야 한다 dto와 연결이 되어서 전달이 되는건다-->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{article.id}}">Back</a>
</form>
{{/article}}

{{>layouts/footer}}